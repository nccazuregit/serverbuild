{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "newVMNicName": {
      "type": "string"
    },
    "newVMName": {
      "type": "string",
      "minLength": 1
    },
    "newVMRegion": {
      "type": "string",
      "defaultValue": "uksouth",
      "minLength": 1
    }

  },
  "variables": {
    "newVMNicName": "[concat(parameters('newVMName'), '-NIC-01')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "StaticNic",
      "apiVersion": "2017-05-10",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Network/networkInterfaces",
              "name": "[variables('newVMNicName')]",
              "apiVersion": "2018-03-01",
              "location": "[parameters('newVMRegion')]",
              "properties": {
                "ipConfigurations": [
                  {
                    "name": "ipconfig1",
                    "properties": {
                      "privateIPAllocationMethod": "Static",
                      "privateIPAddress": "[reference(concat('Microsoft.Network/networkInterfaces/', parameters('newVMNicName'))).ipConfigurations[0].properties.privateIPAddress]",
                      "subnet": {
                        "id": "[variables('newVMSubnetRef')]"
                      }
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    }


  ],
  "outputs": {
    
  }
}
